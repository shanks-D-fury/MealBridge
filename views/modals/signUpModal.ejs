	const iti = window.intlTelInput(phoneInputField, {
		initialCountry: "in",
		utilsScript:
			"https://cdn.jsdelivr.net/npm/intl-tel-input/build/js/utils.js", // for validation
	});

	document
		.getElementById("signupForm")
		.addEventListener("submit", function (e) {
