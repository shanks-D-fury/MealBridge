<link rel="stylesheet" href="/includes/alerts.css" />
<% if(success && success.length){ %>
<div
	class="alert alert-success alert-dismissible fade show col-lg-5 offset-lg-3 col-md-9 offset-md-1 col-sm-8 offset-sm-1 col-10 offset-1 justify-content-center"
	role="alert"
	id="top-alert"
>
	<span class="ms-4"><%= success %></span>
</div>

<% } %> <% if( error && error.length){ %>
<div
	class="alert alert-danger alert-dismissible fade show col-lg-5 offset-lg-3 col-10 offset-1 justify-content-center"
	role="alert"
	id="top-alert"
>
	<span class="ms-4"><%= error %></span>
</div>
<% } %>

<script>
	// Function to automatically close the alert after 2 seconds
	setTimeout(function () {
		// Find the alert elements
		const alertElement = document.getElementById("top-alert");

		if (alertElement) {
			// Trigger Bootstrap's alert dismiss method
			const alertDismiss = new bootstrap.Alert(alertElement);
			alertDismiss.close(); // Dismiss the alert
		}
	}, 30000); // 2000ms = 2 seconds
</script>
